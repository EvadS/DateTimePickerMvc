@model DateTimePickerMvc.Models.Person

@{
    ViewBag.Title = "Create";
}

 <link href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" rel="stylesheet" />

  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
